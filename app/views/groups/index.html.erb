<%- model_class = Group -%>
<div class="page-header">
  <h1>Listado de Grupos</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:Aprendices) %></th>
      <th><%= model_class.human_attribute_name(:numero) %></th>
      <th><%= model_class.human_attribute_name(:nombre) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to 'Aprendices(' + group.opers.count.to_s + ')', group_opers_path(group) %></td>
        <td><%= group.number %></td>
        <td><%= group.name %></td>
        <td>
          <%= link_to t('.Editar'),
                      edit_group_path(group), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.Eliminar'),
                      group_path(group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.nuevo'),
            new_group_path,
            :class => 'btn btn-primary' %>
